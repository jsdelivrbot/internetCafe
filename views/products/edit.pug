include ./adminHeader

.container
	h3
		a(href='/edit') 商品清單
	h1 #{title}
	- var url = '/update/' + product._id
	form(action=url method='post')
		table
			tbody
				tr
					td 商品名稱
					td
						input(type='text' name='name' value=product.name)
				tr
					td 商品價格
					td
						input(type='number' name='unitPrice' value=product.unitPrice)
				tr
					td(colspan='2')
						button(type='submit') 更新資料