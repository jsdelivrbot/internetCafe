include ./header

.container
	.col-sm-6.col-sm-offset-3
		h1
			span.fa.fa-sign-in  Login

		if (message.length)
			.alert.alert-danger #{message} 

		form(action='/login' method='post')
			.form-group
				label Email
				input.form-control(type='text' name='email' required)
			.form-group
				label Password
				input.form-control(type='password' name='password' required)
			button.btn.btn-warning.btn-lg(type='submit') Login
		hr
		p Need an account?
			a(href='/signup')  Signup
		p Or go
			a(href='/')  home
			| .